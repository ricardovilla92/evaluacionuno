<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Ricardo.evaluacion.Estudiante">

    <EditText
        android:id="@+id/editTextcodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Codigo"
        android:layout_below="@+id/editTextnombre"
        android:layout_alignStart="@+id/editTextnombre" />

    <EditText
        android:id="@+id/editTextmateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Materia"
        android:layout_below="@+id/editTextcodigo"
        android:layout_alignStart="@+id/editTextcodigo" />

    <EditText
        android:id="@+id/editTextprimerparcial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Primer Parcial :30%"
        android:layout_below="@+id/editTextmateria"
        android:layout_alignStart="@+id/editTextmateria" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Segundo Parcial :30%"
        android:layout_below="@+id/editTextprimerparcial"
        android:layout_alignStart="@+id/editTextprimerparcial" />

    <EditText
        android:id="@+id/editTextnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre" />

    <EditText
        android:id="@+id/editTexttercerparcial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tercer Parcial :40%"
        android:layout_below="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_weight="1"
        android:text="GUARDAR "
        android:layout_below="@+id/editTexttercerparcial"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
